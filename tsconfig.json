{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "jsx": "react-jsx",
  },
  "include": [
    "custom.d.ts",
    "src/index.ts",
    "src/hooks/**/*",
    "src/icons/**/*",
    "src/styled.d.ts",
    "src/components/**/*",
  ],
  "exclude": [
    "storybook-static/**/*",
    "node_modules/**/*",
  ]
}